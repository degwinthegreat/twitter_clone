<div class="post_link">
    <h1>
        <a href="/tweets/new" class="typewrite" data-period="2000" data-type='[ "140文字以内でつぶやいてみよう！"]'>
            <span class="wrap"></span>
        </a>
    </h1>
</div>


<div class="page_title">
    <h2 class="text_center">最近の投稿</h2>
</div>

<div class="table-responsive hidden-xs">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>id</th>
                <th>Content</th>
            </tr>
        </thead>
        <tbody>
        <% @tweet.each do |tweet| %>
            <tr>
                <th scope="row"><%= tweet.id %></th>
                <td><%= tweet.content %></td>
            </tr>
        <% end %>
        </tbody>
    </table>
</div>
<div class="tweet-panel hidden-lg hidden-mg hidden-sm col-xs-12">
    <div class="panel panel-default">
        <% @tweet.each do |tweet| %>
        <div class="panel-container">
            <div class="panel-heading">
                <h3 class="panel-title"><%= tweet.id %></h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-10">
                        <%= tweet.content %>
                    </div>
                </div>
            </div>
        </div>
        <% end %>
    </div>
</div>
