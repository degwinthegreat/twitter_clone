<div class="main_contents">
    <h1 class="text_center">つぶやき一覧</h1>
        <% @tweets.each do |tweet| %>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"><%= tweet.id %></h3>
                </div>
                <div class="panel-body">
                    <%= tweet.content %>
                    <% if current_user.id == tweet.user_id %>
                      <%= link_to '　詳細を確認する　', tweet_path(tweet.id) %>
                      <%= link_to "　つぶやきを編集する　", edit_tweet_path(tweet.id), data: { confirm: '本当に編集していいでいいですか？' } %>
                      <%= link_to '　つぶやきを削除する　', tweet_path(tweet.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %>
                    <% else %>
                      <%= link_to '　詳細を確認する　', tweet_path(tweet.id) %>
                    <% end %>
                </div>
            </div>
        <% end %>
</div>
