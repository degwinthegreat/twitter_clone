<p><%= notice %></p>
<% unless @tweet.user == current_user %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(tweet_id: @tweet.id), method: :delete,class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(twwet_id: @tweet.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>
